<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}CrudBook{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <style>
            .modal {
                display: none;
                position: fixed;
                z-index: 1;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
                background-color: rgba(0,0,0,0.4);
                padding-top: 60px;
            }
            .modal-content {
                background-color: #fefefe;
                margin: 5% auto;
                padding: 20px;
                border: 1px solid #888;
                width: 80%;
                max-width: 500px;
                border-radius: 10px;
            }
            .close {
                color: #aaa;
                float: right;
                font-size: 28px;
                font-weight: bold;
            }
            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }
        </style>
    {% endblock %}
</head>
<body>

{% block body %}
<div class="p-6 bg-gray-100 min-h-screen">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Book List</h1>
        </div>
        <button class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" onclick="openAddBookModal()">Add Book</button>
    </div>

    {% if books is defined and books is not empty %}
        <div class="bg-white shadow-md rounded-lg overflow-x-auto">
            <table class="min-w-full table-auto">
                <thead>
                    <tr class="bg-gray-200 text-left text-gray-700">

                        <th class="px-6 py-3 font-medium">Refrence</th>
                        <th class="px-6 py-3 font-medium">Book Title</th>
                        <th class="px-6 py-3 font-medium">Book Author</th>
                        <th class="px-6 py-3 font-medium">Pages</th>
                        <th class="px-6 py-3 font-medium">Edit</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for book in books %}
                        <tr class="hover:bg-gray-50">

                            <td class="px-6 py-4">{{ book.ref|upper }}</td>
                            <td class="px-6 py-4">{{ book.title|upper }}</td>
                            <td class="px-6 py-4">{{ book.author.name|upper }}</td>
                            <td class="px-6 py-4">{{ book.nbrPages|upper }}</td>

                            <td class="px-6 py-4">
                                <a href="#" class="text-blue-600 hover:underline mr-2" onclick="openEditBookModal('{{ book.ref }}','{{ book.title }}', '{{ book.author.name }}','{{ book.nbrPages }}')">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a href="#" class="text-red-600 hover:underline" onclick="openDeleteBookModal()">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <h2 class="mt-4 text-gray-600">This table contains {{ books|length }} books.</h2>
    {% else %}
        <h2 class="text-gray-600">The table is not defined or empty.</h2>
    {% endif %}
</div>

{% include 'book/add_popup_form.html.twig' %}
{% include 'book/edit_popup_form.html.twig' %}
{% include 'book/delete_confirmation.html.twig' %}

<script>


    function openAddBookModal() {
        document.getElementById("addBookModal").style.display = "block";
    }

    function closeAddBookModal() {
        document.getElementById("addBookModal").style.display = "none";
    }

<script>



    function openEditBookModal(ref,title, name,nbrPages) {
        document.getElementById("edit-book-ref").value = ref;
        document.getElementById("edit-book-title").value = title;
        document.getElementById("edit-book-author-name").value = name;
        document.getElementById("edit-book-nbrPages").value = name;
        document.getElementById("editBookModal").style.display = "block";
    }

    function closeEditBookModal() {
        document.getElementById("editBookModal").style.display = "none";
    }

    function openDeleteBookModal() {
        document.getElementById("deleteBookModal").style.display = "block";
    }

    function closeDeleteBookModal() {
        document.getElementById("deleteBookModal").style.display = "none";
    }

    function confirmDeleteBook() {
        // Add your delete logic here
        closeDeleteBookModal();
    }

    window.onclick = function(event) {
        if (event.target == document.getElementById("addBookModal")) {
            closeAddBookModal();
        }
        if (event.target == document.getElementById("editBookModal")) {
            closeEditBookModal();
        }
        if (event.target == document.getElementById("deleteBookModal")) {
            closeDeleteBookModal();
        }
    }
</script>
{% endblock %}
</body>
</html>