<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeForm()">Ã—</span>
        <h2 class="text-2xl font-bold mb-4">Add New Author</h2>
        <form action="/add_author" method="post">
            <div class="mb-4">
                <label for="name" class="block text-gray-700">Name</label>
                <input type="text" id="name" name="name" class="w-full px-3 py-2 border rounded-lg" required>
            </div>
            <div class="mb-4">
                <label for="email" class="block text-gray-700">Email</label>
                <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded-lg" required>
            </div>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-500">Submit</button>
        </form>
    </div>
</div>
