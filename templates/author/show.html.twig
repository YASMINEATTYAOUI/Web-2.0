<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tailwind CSS Table</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>

<h1>Author Name: {{ name }}</h1>

<div class="p-6 bg-gray-100 min-h-screen">
  <!-- Header Section -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-800">Users</h1>
      <p class="text-gray-600">A list of all the users in your account including their name, title, email, and role.</p>
    </div>
    <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-500">Add User</button>
  </div>

  <!-- Table Section -->
  <div class="bg-white shadow-md rounded-lg overflow-x-auto">
    <table class="min-w-full table-auto">
      <thead>
        <tr class="bg-gray-200 text-left text-gray-700">
          <th class="px-6 py-3 font-medium">Name</th>
          <th class="px-6 py-3 font-medium">Email</th>
          <th class="px-6 py-3 font-medium">Edit</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 flex items-center">
            <img src="https://via.placeholder.com/40" alt="Avatar" class="w-10 h-10 rounded-full mr-4">
            <div>
              <div class="font-bold">Lindsay Walton</div>
              <div class="text-sm text-gray-500">lindsay.walton@example.com</div>
            </div>
          </td>
          <td class="px-6 py-4">
            <div>Front-end Developer</div>
            <div class="text-sm text-gray-500">Optimization</div>
          </td>
          <td class="px-6 py-4">
            <a href="#" class="text-blue-600 hover:underline">Edit</a>
          </td>
        </tr>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 flex items-center">
            <img src="https://via.placeholder.com/40" alt="Avatar" class="w-10 h-10 rounded-full mr-4">
            <div>
              <div class="font-bold">Courtney Henry</div>
              <div class="text-sm text-gray-500">courtney.henry@example.com</div>
            </div>
          </td>
          <td class="px-6 py-4">
            <div>Designer</div>
            <div class="text-sm text-gray-500">Intranet</div>
          </td>
          <td class="px-6 py-4">
            <a href="#" class="text-blue-600 hover:underline">Edit</a>
          </td>
        </tr>
        <!-- Add more user rows here -->
      </tbody>
    </table>
  </div>
</div>

</body>
</html>
