{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<body>
    <h1>Book List</h1>

    {% if authors is defined and authors is not empty %}
        <table>
            <tr>
                <th>Book Name</th>
                <th>Book Email</th>
            </tr>
            {% for book in authors %}
                <tr>
                    <td>{{ book.name|upper }}</td>

                </tr>
            {% endfor %}
        </table>
        <h2>This table contains {{ books|length }} books.</h2>
    {% else %}
        <h2>The table is not defined or empty.</h2>
    {% endif %}
</body>
</html>

{% endblock %}
